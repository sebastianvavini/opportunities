<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.CadastroActivity">



    <TextView
        android:id="@+id/edit_view_cadastro"
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="Cadastro de Usuario"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/edit_cpf"
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:hint="Digite um CPF VÁLIDO"


        app:layout_constraintTop_toBottomOf="@+id/edit_view_cadastro"
        app:layout_constraintStart_toStartOf="@+id/edit_view_cadastro"
        app:layout_constraintEnd_toEndOf="@+id/edit_view_cadastro"

        />

    <EditText
        android:id="@+id/edit_senha"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Digite um senha forte"
        app:layout_constraintTop_toBottomOf="@+id/edit_cpf"
        app:layout_constraintStart_toStartOf="@+id/edit_cpf"
        app:layout_constraintEnd_toEndOf="@+id/edit_cpf"

        />

    <EditText
        android:id="@+id/edit_whats"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Whats"
        app:layout_constraintTop_toBottomOf="@+id/edit_senha"
        app:layout_constraintStart_toStartOf="@+id/edit_senha"
        app:layout_constraintEnd_toEndOf="@+id/edit_senha"

        />


    <EditText
        android:id="@+id/edit_username"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        app:layout_constraintTop_toBottomOf="@+id/edit_whats"
        app:layout_constraintStart_toStartOf="@+id/edit_whats"
        app:layout_constraintEnd_toEndOf="@+id/edit_whats"

        />




    <Button
        android:id="@+id/button_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"

        app:layout_constraintTop_toBottomOf="@+id/edit_username"
        app:layout_constraintStart_toStartOf="@+id/edit_username"
        app:layout_constraintEnd_toEndOf="@+id/edit_username"

        />

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/button_ir_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Login"

        app:layout_constraintTop_toBottomOf="@+id/button_salvar"
        app:layout_constraintStart_toStartOf="@+id/button_salvar"
        app:layout_constraintEnd_toEndOf="@+id/button_salvar"

        />

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/button_listar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Listar"

        app:layout_constraintTop_toBottomOf="@+id/button_ir_login"
        app:layout_constraintStart_toStartOf="@+id/button_ir_login"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_login"

        />

</androidx.constraintlayout.widget.ConstraintLayout>